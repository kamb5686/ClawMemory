{
  "id": "clawmemory-seva",
  "name": "ClawMemory SEVA",
  "description": "Adds /seva command family for controlling the local SEVA service (status/mode/recall/verify/on/off/doctor).",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": { "type": "string", "default": "http://127.0.0.1:18790" },
      "timeoutMs": { "type": "integer", "minimum": 200, "maximum": 30000, "default": 2500 },
      "defaultRecallK": { "type": "integer", "minimum": 1, "maximum": 50, "default": 5 },
      "startupCheck": { "type": "boolean", "default": true }
    }
  },
  "uiHints": {
    "baseUrl": { "label": "SEVA base URL", "placeholder": "http://127.0.0.1:18790" },
    "timeoutMs": { "label": "HTTP timeout (ms)" },
    "defaultRecallK": { "label": "Default recall k" },
    "startupCheck": { "label": "Check SEVA on Gateway startup" }
  }
}
